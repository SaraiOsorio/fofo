<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_lazada_payment_import_wizard" model="ir.ui.view">
            <field name="name">lazada.payment.form</field>
            <field name="model">lazada.payment</field>
            <field name="arch" type="xml">
                <form string="Import">
                    <separator string="Generate Customer Billing"/>
                    <label string="This wizard will create customer billing using lazada payment file and it will also create log history for same."/>
                    <newline/>
                    <group>
                        <field name="input_file"/>
                    </group>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="journal_id" domain="[('type','in',('bank','cash'))]"/>
                        </group>
                    </group>
                <footer>
                    <button name="import_payment" string="Import" type="object" class="oe_highlight"/> or 
                    <button special="cancel" string="Cancel"  class="oe_link"/>
                </footer>
                </form>
            </field>
        </record>

        <record id="action_import_lazada_payment" model="ir.actions.act_window">
            <field name="name">Import Lazada Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lazada.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_lazada_payment_import_wizard"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
        
        <menuitem id="lazada_import_payment_main_menu" name="Lazada Payment"
                   parent= "account.menu_finance" sequence="2" />
        
        <menuitem id="lazada_import_payment_menu" name="Lazada Payment Import" action="action_import_lazada_payment"
                   parent= "lazada_import_payment_main_menu"/>

    </data>
</openerp>
